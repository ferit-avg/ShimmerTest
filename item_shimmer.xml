<com.facebook.shimmer.ShimmerFrameLayout android:id="@+id/shimmerFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:shimmer_duration="1000"
    app:shimmer_direction="left_to_right"
    app:shimmer_repeat_delay="1000"
    app:shimmer_repeat_count="50"
    app:shimmer_clip_to_children="true"
    app:shimmer_shape="radial"
    app:shimmer_intensity="0.5"
    app:shimmer_tilt="45"
    app:shimmer_dropoff="0.2"
    app:shimmer_auto_start="true"
    app:shimmer_fixed_width="10dp"
    app:shimmer_base_alpha="0.9"
    app:shimmer_base_color="@color/teal_200"
    app:shimmer_highlight_alpha="0.2"
    app:shimmer_highlight_color="@color/teal_200"
    app:shimmer_repeat_mode="restart"
    app:shimmer_colored="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/item_list" />

        <include layout="@layout/item_list" />

        <include layout="@layout/item_list" />

        <include layout="@layout/item_list" />

        <include layout="@layout/item_list" />

        <include layout="@layout/item_list" />

        <include layout="@layout/item_list" />

        <include layout="@layout/item_list" />

        <include layout="@layout/item_list" />

        <include layout="@layout/item_list" />

        <include layout="@layout/item_list" />

    </LinearLayout>


</com.facebook.shimmer.ShimmerFrameLayout>
